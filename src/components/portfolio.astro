---
import { projects, links } from '@/data.json'
import { Image } from 'astro:assets'
import networkAlgo from "../../public/img/projects/network-algo.png";

---
<section id="portfolio">
  <div class="portfolio-container">
    <h1 class="portfolio-title">PROJECTS</h1>

    <div class="portfolio-row">
      {projects.map((project) => (
        <div class="portfolio-project-card" key={project.altText}>
          <img src={project.imageSrc} alt={project.altText} class="portfolio-project-image" />
          
          <div class="portfolio-project-details">
            <h2 class="portfolio-project-title">{project.description}</h2>
          </div>

          <div class="portfolio-project-buttons">
            <a href={project.codeSrc} target="_blank" class="portfolio-btn">
              View Code
            </a>
            <a href={project.liveDemoURL} target="_blank" class="portfolio-btn">
              Live Demo
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

